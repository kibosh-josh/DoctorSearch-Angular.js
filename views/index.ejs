    <div ng-controller="mapCtrl">
      <google-map center="map.center" zoom="map.zoom" draggable="true" dragging="map.dragging" events="map.events" control="map.control" styles="map.styles" options="{scrollwheel: false}">
        <markers models="map.markers" class="marker-style" coords="'self'" click="'onClick'" events="markersEvents">
        </markers>
        <window show="map.currentMarker.showWindow" class="infobox-wrapper" closeClick="map.currentMarker.closeClick" coords="map.currentMarker" options="map.windowOptions">
          <div id="popup" style="padding:5px" class="infobox-inner">
            <h4><strong>{{map.currentMarker.name}}</strong></h4>
            <img ng-src="{{map.currentMarker.stars}}"/><br><br>
            <p>
              <strong>Address</strong><br>
              <span>{{map.currentMarker.address}}</span><br>
            </p>
            <p ng-if="map.currentMarker.phone !== null">
              <strong>Phone</strong><br>
              <span>{{map.currentMarker.phone}}</span><br><br>
            </p>
            <p ng-if="map.currentMarker.specialty !== null">
              <strong>Specialty</strong><br>
              <span>{{map.currentMarker.specialty}}</span><br><br>
            </p>
            <p>
              <strong><a ng-show="map.currentMarker.url.search('yelp') > -1" ng-href="{{map.currentMarker.url}}" target="_blank">Go to The Yelp Site </a><strong>
              <strong><a ng-hide="map.currentMarker.url.search('yelp') > -1" ng-href="{{map.currentMarker.url}}" target="_blank">No Yelp Reviews, Google Results</a><strong>
            </p>
          </div>
        </window>
      </google-map>
      <div class="search-box-wrapper">
        <div class="search-box-inner">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-4 col-xs-6">
                        <div class="search-box map show-search-box">
<!--                           <h3 id="error" class="my-show-hide-animation" ng-show="tryAgain">You must select an insurance to search</h3>
 -->                            <form role="form" id="form-map" class="form-map form-search" name="doctorForm">
                                <h2>Search Doctors by Insurance</h2>
                                <div class="form-group">
                                  <select name="insurance" ng-hide="alreadySearched" ng-model="insurance" ng-options="insurance as insurance.display for insurance in insurances">
                                    <option value="" ng-hide="insurance"> Select Insurance (required)</option>
                                  </select>
                                </div><!-- /.form-group -->
                                <div class="form-group" ng-show="insurance">
                                  <select name="doctors" ng-model="doctor" ng-show="insurance" ng-hide="alreadySearched" ng-options="doctor as doctor.display for doctor in doctors">
                                    <option value="" ng-hide="doctor"> Doctor Search Options (optional)</option>
                                  </select>
                                </div><!-- /.form-group -->
                                <div class="form-group" ng-hide="alreadySearched || doctor.value == 2">
                                  <input type="text" class="form-control" class="form-control" id="search-box-doctor" ng-show="doctor" name="doctorOption" ng-model="doctor.text" placeholder="{{doctor.display}} of doctor (optional)">
                                </div>
                                <div class="form-group" ng-show="doctor.value == 2">
                                  <select name="specialtyOption" ng-hide="alreadySearched" ng-model="specialtyOption" ng-options="specialtyOption as specialtyOption.display for specialtyOption in specialtyOptions">
                                    <option value="" ng-hide="specialtyOption">Specialties</option>
                                  </select>
                                </div>
                                <div class="form-group">
                                  <button class="btn btn-default" ng-click="getDoctors()" ng-hide="alreadySearched">Search</button>
                                </div><!-- /.form-group -->
                                <div class="form-group">
                                  <button class="btn btn-default" ng-click="clearMap()" ng-show="alreadySearched">Clear Map -- New Search</button>
                                </div>
                            </form><!-- /#form-map -->
                            <h2 id="results" class="my-show-hide-animation" ng-show="alreadySearched"><em>Showing </em><strong>{{limit}}</strong><em> of  </em><strong> {{map.markers.length}} </strong><em> results.</em></h2>
                            <h2 id="error" class="my-show-hide-animation" ng-show="tryAgain"><strong><em>Please select an insurance to search</em></strong></h2>
                            <ul>
                              <li ng-repeat="m in map.markers | limitTo:limit"><a ng-click="m.onClick()">{{m.name}}</a></li>
                            </ul>
                            <pagination total-items="totalItems" items-per-page="limit" ng-model="currentPage" ng-show="alreadySearched" ng-change="pageChanged()"></pagination>
                            <!--<pagination boundary-links="true" total-items="totalItems" items-per-page="limit" ng-model="currentPage" class="pagination-md" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></pagination>-->
                        </div><!-- /.search-box.map -->
                    </div><!-- /.col-md-4 -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div><!-- /.search-box-inner -->
      </div><!-- .search-box-wrapper -->
    </div><!-- ng-mapCtrl -->
